{
  "name": "nest-bun-drizzle",
  "version": "1.0.0",
  "description": "",
  "author": "",
  "private": true,
  "license": "UNLICENSED",
  "scripts": {
    "build": "bun build src/main.ts --minify --outdir ./dist --target bun --splitting --sourcemap=linked",
    "start": "bun run dist/main.js",
    "start:dev": "bun --watch src/main.ts",
    "start:debug": "nest start --debug --watch",
    "start:prod": "node dist/main",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "test:ui": "vitest --ui",
    "db:generate": "drizzle-kit generate",
    "db:push": "drizzle-kit push",
    "db:studio": "drizzle-kit studio",
    "db:seed": "bun run src/modules/db/db.seed.ts",
    "fmt": "biome format --write .",
    "lint": "biome lint .",
    "check": "biome check --write .",
    "docker:up": "docker compose up -d",
    "docker:down": "docker compose down",
    "docker:build": "docker buildx build --platform linux/amd64 -t nest-bun-drizzle .",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "@nestjs/cache-manager": "^3.0.0",
    "@nestjs/common": "^11.0.3",
    "@nestjs/core": "^11.0.3",
    "@nestjs/platform-express": "^11.0.3",
    "@nestjs/swagger": "^11.0.2",
    "@nestjs/terminus": "^10.2.3",
    "cache-manager": "^6.3.2",
    "cache-manager-redis-yet": "^5.1.5",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.1",
    "compression": "^1.7.5",
    "drizzle-kit": "^0.30.2",
    "drizzle-orm": "^0.38.4",
    "drizzle-seed": "^0.3.0",
    "helmet": "^8.0.0",
    "nestjs-pino": "^4.2.0",
    "pino-http": "^10.4.0",
    "pino-pretty": "^13.0.0",
    "reflect-metadata": "^0.2.2",
    "rxjs": "^7.8.1",
    "zod": "^3.24.1"
  },
  "devDependencies": {
    "@biomejs/biome": "1.9.4",
    "@nestjs/cli": "^11.0.0",
    "@nestjs/testing": "^11.0.3",
    "@types/bun": "^1.1.17",
    "@types/cache-manager": "^4.0.6",
    "@types/cache-manager-redis-store": "^2.0.4",
    "@types/compression": "^1.7.5",
    "@types/express": "^5.0.0",
    "@types/node": "^22.10.7",
    "@types/supertest": "^6.0.2",
    "@vitest/coverage-v8": "^3.0.2",
    "@vitest/ui": "^3.0.2",
    "supertest": "^7.0.0",
    "typescript": "^5.7.3",
    "vitest": "^3.0.2"
  },
  "jest": {
    "moduleFileExtensions": ["js", "json", "ts"],
    "rootDir": "src",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": ["**/*.(t|j)s"],
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  }
}
